<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a003cumulativeapplications">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--locking orientation included into the activity-->
        <activity android:screenOrientation="portrait" android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name1"
            android:name=".Activity001"></activity>

        <activity android:label="@string/app_name2"
            android:name=".Activity002"></activity>

        <activity android:label="@string/app_name3"
            android:name=".Activity003"></activity>

        <activity android:label="@string/test_name1"
            android:name=".Activity003A"></activity>

    </application>

</manifest>