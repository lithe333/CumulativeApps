<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20pt"
            android:text="@string/a3a_header"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/a3a_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_btn1"
            android:onClick="Click3a"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLavender"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/a3a_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_tv1"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPastelYellow"/>

        <Button
            android:id="@+id/a3a_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_btn2"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLavender"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/a3a_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_tv2"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPastelYellow"/>

        <Button
            android:id="@+id/a3a_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_btn3"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLavender"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/a3a_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_tv3"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPastelYellow"/>

        <Button
            android:id="@+id/a3a_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_btn4"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLavender"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/a3a_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test1_tv4"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPastelYellow"/>

        <Button
            android:id="@+id/a3a_back_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tests"
            android:onClick="Choose3"
            android:textColor="@color/colorLimeGreen"
            android:background="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/a3a_back_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/back"
            android:onClick="Back"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLimeGreen"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</ScrollView>