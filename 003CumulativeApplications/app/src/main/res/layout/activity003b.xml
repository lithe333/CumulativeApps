<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20pt"
            android:text="@string/a3b_header"/>

        <Button
            android:id="@+id/a3b_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/q_name1"
            android:onClick="ChooseQ"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorWarm"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/a3b_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/q_name2"
            android:onClick="ChooseQ"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorWarm2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/a3b_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/q_name3"
            android:onClick="ChooseQ"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorWarm3"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/a3b_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/q_name4"
            android:onClick="ChooseQ"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorWarm4"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/a3b_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/q_name5"
            android:onClick="ChooseQ"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorWarm5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/a3b_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/q_name6"
            android:onClick="ChooseQ"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorWarm6"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>


        <Button
            android:id="@+id/a3b_back_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tests"
            android:onClick="Choose3"
            android:textColor="@color/colorLimeGreen"
            android:background="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/a3b_back_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/back"
            android:onClick="Back"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorLimeGreen"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</ScrollView>